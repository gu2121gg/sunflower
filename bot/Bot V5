            minimizeBtn.textContent = '‚Äì';
        } else {
            mainContent.style.display = 'none';
            footerInfo.style.display = 'none';
            minimizeBtn.textContent = '+';
        }
    });

    /* === Atualizar Idioma do Menu Principal === */
